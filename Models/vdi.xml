<?xml version="1.0"?>

<!--Vertical Display Indicator A6-E -->

<PropertyList>
	<path>vdi.ac</path>

	<!-- vdi on-off -->
	<animation>
		<type>select</type>
		<object-name>video</object-name>
		<condition>
			<not>
				<property>sim/model/A-6E/controls/VDI/display/off</property>
				<value>off</value>
			</not>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>off-screen</object-name>
		<condition>
			<property>sim/model/A-6E/controls/VDI/display/off</property>
			<value>off</value>
		</condition>
	</animation>
	
	<!-- sky -->
	<animation>
		<name>sky-roll-rotation</name>
		<type>rotate</type>
		<object-name>sky</object-name>
		<property>orientation/roll-deg</property>
		<factor>1</factor>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0.0054</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	<animation>
		<name>sky-pitch-translation</name>
		<type>translate</type>
		<object-name>sky</object-name>
		<property>orientation/pitch-deg</property>
		<factor>0.00057</factor>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>-1</z>
		</axis>
	</animation>
	<animation>
		<name>sky-pitch-scale</name>
		<type>scale</type>
		<object-name>sky</object-name>
		<property>orientation/pitch-deg</property>
		<z-min>0.7</z-min>
		<z-max>1.3</z-max>
		<x-factor>0</x-factor>
		<y-factor>0</y-factor>
		<z-factor>0.00333</z-factor>
		<x-offset>1</x-offset>
		<y-offset>1</y-offset>
		<z-offset>1</z-offset>
	</animation>
	<animation>
		<name>horizon-line-roll-rotation</name>
		<type>rotate</type>
		<object-name>horizon-line</object-name>
		<property>orientation/roll-deg</property>
		<factor>1</factor>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0.0054</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	<animation>
		<name>horizon-line-pitch-translation</name>
		<type>translate</type>
		<object-name>horizon-line</object-name>
		<property>orientation/pitch-deg</property>
		<factor>0.00057</factor>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>-1</z>
		</axis>
	</animation>
		
	<!-- ground -->
	<animation>
		<name>ground-roll-rotation</name>
		<type>rotate</type>
		<object-name>ground</object-name>
		<property>orientation/roll-deg</property>
		<factor>1</factor>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0.0054</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	
	
	<!-- alt-curtain -->
	<animation>
		<name>alt-curtain-select</name>
		<type>select</type>
		<object-name>alt-curtain</object-name>
		<condition>
			<less-than>
				<property>position/altitude-agl-ft</property>
				<value>5000</value>
			</less-than>
		</condition>
	</animation>
	<animation>
		<name>alt-curtain-roll-rotation</name>
		<type>rotate</type>
		<object-name>alt-curtain</object-name>
		<property>orientation/roll-deg</property>
		<factor>1</factor>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0.0054</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	<animation>
		<name>alt-curtain-alt-translation</name>
		<type>translate</type>
		<object-name>alt-curtain</object-name>
		<property>position/altitude-agl-ft</property>
        <interpolation>
            <entry><ind>0</ind><dep>0</dep></entry>
            <entry><ind>400</ind><dep>0.02</dep></entry>
            <entry><ind>7000</ind><dep>0.075</dep></entry>
            <entry><ind>50000</ind><dep>0.075</dep></entry>
        </interpolation>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>-1</z>
		</axis>
	</animation>
	<animation>
		<name>alt-curtain-pitch-translation</name>
		<type>translate</type>
		<object-name>alt-curtain</object-name>
		<property>orientation/pitch-deg</property>
		<factor>0.000734</factor>
		<min-m>-0.056</min-m>
		<max-m>0.055</max-m>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>-1</z>
		</axis>
	</animation>
	<animation>
		<name>alt-curtain-pitch-scale</name>
		<type>scale</type>
		<object-name>alt-curtain</object-name>
		<property>orientation/pitch-deg</property>
		<z-min>0.3</z-min>
		<z-max>1</z-max>
		<x-factor>0</x-factor>
		<y-factor>0</y-factor>
		<z-factor>-0.01</z-factor>
		<x-offset>1</x-offset>
		<y-offset>1</y-offset>
		<z-offset>1</z-offset>
	</animation>
	
	
	<!-- textures translation -->	
	<animation>
		<type>textranslate</type>
		<object-name>ground</object-name>
		<property>sim/model/A-6E/instrumentation/ticker</property>
		<factor>0.0025</factor>
		<step>1</step>
		<scroll>1</scroll>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>
 
	<animation>
		<type>textranslate</type>
		<object-name>sky</object-name>
		<property>sim/model/A-6E/instrumentation/ticker</property>
		<factor>0.0025</factor>
		<step>1</step>
		<scroll>1</scroll>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
	</animation>


	<!-- bank-index -->

	<animation>
		<name>bank-index-rotation</name>
		<type>rotate</type>
		<object-name>bank-index</object-name>
		<property>orientation/roll-deg</property>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0.0054</z-m>
		</center>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	<animation>
		<name>bank-index-translation</name>
		<type>translate</type>
		<object-name>bank-index</object-name>
		<property>orientation/roll-deg</property>
		<interpolation>
		    <entry><ind>-170</ind><dep>0.003</dep></entry>
			<entry><ind>-160</ind><dep>0.0043</dep></entry>
			<entry><ind>-150</ind><dep>0.0079</dep></entry>
		    <entry><ind>-140</ind><dep>0.0136</dep></entry>
			<entry><ind>-130</ind><dep>0.0205</dep></entry>
			<entry><ind>-120</ind><dep>0.0258</dep></entry>
		    <entry><ind>-110</ind><dep>0.0249</dep></entry>
			<entry><ind>-100</ind><dep>0.0228</dep></entry>
		    <entry><ind>-90</ind><dep>0.0238</dep></entry>
			<entry><ind>-80</ind><dep>0.0228</dep></entry>
			<entry><ind>-70</ind><dep>0.0249</dep></entry>
		    <entry><ind>-60</ind><dep>0.0258</dep></entry>
			<entry><ind>-50</ind><dep>0.0205</dep></entry>
			<entry><ind>-40</ind><dep>0.0136</dep></entry>
		    <entry><ind>-30</ind><dep>0.0079</dep></entry>
			<entry><ind>-20</ind><dep>0.0043</dep></entry>
			<entry><ind>-10</ind><dep>0.003</dep></entry>
		    <entry><ind>0</ind><dep>0</dep></entry>
		    <entry><ind>10</ind><dep>0.003</dep></entry>
			<entry><ind>20</ind><dep>0.0043</dep></entry>
			<entry><ind>30</ind><dep>0.0079</dep></entry>
		    <entry><ind>40</ind><dep>0.0136</dep></entry>
			<entry><ind>50</ind><dep>0.0205</dep></entry>
			<entry><ind>60</ind><dep>0.0258</dep></entry>
		    <entry><ind>70</ind><dep>0.0249</dep></entry>
			<entry><ind>80</ind><dep>0.0228</dep></entry>
			<entry><ind>90</ind><dep>0.0238</dep></entry>
			<entry><ind>100</ind><dep>0.0228</dep></entry>
			<entry><ind>110</ind><dep>0.0249</dep></entry>
		    <entry><ind>120</ind><dep>0.0258</dep></entry>
			<entry><ind>130</ind><dep>0.0205</dep></entry>
			<entry><ind>140</ind><dep>0.0136</dep></entry>
		    <entry><ind>150</ind><dep>0.0079</dep></entry>
			<entry><ind>160</ind><dep>0.0043</dep></entry>
			<entry><ind>170</ind><dep>0.003</dep></entry>
		    <entry><ind>180</ind><dep>0</dep></entry>
		</interpolation>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>1</z>
		</axis>
	</animation>

	<!-- vsi-marker -->
	<animation>
		<name>vsi-marker-translation</name>
		<type>translate</type>
		<object-name>vsi-marker</object-name>
		<property>velocities/vertical-speed-fps</property>
		<factor>0.0003721</factor>
		<min-m>-0.0312</min-m>
		<max-m>0.0312</max-m>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>1</z>
		</axis>
	</animation>


	<!-- slip-skid-ball -->
	<animation>
		<name>slip-skid-rotation</name>
		<type>rotate</type>
		<object-name>slip-skid-ball</object-name>
		<property>/instrumentation/slip-skid-ball/indicated-slip-skid</property>	
		<max-deg>20</max-deg>
		<min-deg>-20</min-deg>
		<factor>8</factor>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0.0054</z-m>
		</center>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<!-- velocity marker -->
	<animation>
		<name>velocity-marker-translation-y</name><!-- horizontal -->
		<type>translate</type>
		<object-name>impact-marker</object-name>
		<condition>
			<greater-than>
				<property>velocities/airspeed-kt</property>
				<value>45</value>
			</greater-than>
		</condition>
		<property>sim/model/A-6E/instrumentation/vdi/velocity_marker_y</property>
		<max-m>0.1</max-m>
		<min-m>-0.1</min-m>
		<factor>0.1</factor>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>
	<animation>
		<name>velocity-marker-translation-z</name><!-- vertical -->
		<type>translate</type>
		<object-name>impact-marker</object-name>
		<condition>
			<greater-than>
				<property>velocities/airspeed-kt</property>
				<value>45</value>
			</greater-than>
		</condition>
		<property>sim/model/A-6E/instrumentation/vdi/velocity_marker_z</property>
		<max>0.7</max>
		<min>-0.7</min>
		<factor>0.1</factor>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>-1</z>
		</axis>
	</animation>

	<!-- break away signal lights -->
    <animation> 
        <type>select</type>
        <object-name>break-lts</object-name>
		<condition>
			<property>sim/model/A-6E/instrumentation/optical-sight/break-lts</property>
		</condition>
    </animation>

	<!-- terrain clearance unserviceable lights -->
    <animation> 
        <type>select</type>
        <object-name>tc-lts</object-name>
		<condition>
			<not>
				<property>sim/model/A-6E/instrumentation/terrain-clearance/serviceable</property>
			</not>
		</condition>
    </animation>

	<!-- radar altitude out of range lights -->
    <animation> 
        <type>select</type>
        <object-name>ra-lts</object-name>
		<condition>
			<or>
				<less-than>
					<property>position/altitude-agl-ft</property>
					<value>20</value>
				</less-than>
				<greater-than>
					<property>position/altitude-agl-ft</property>
					<value>5000</value>
				</greater-than>
			</or>
		</condition>
    </animation>



 
	<!-- lighting -->
  
    <animation> 
        <object-name>mount</object-name>
        <type>material</type>
         <emission> 
            <factor-prop>controls/lighting/panel-norm</factor-prop>
            <red>0.45</red>
            <green>0.34</green>
            <blue>0.18</blue>
        </emission>
    </animation>

    <animation> 
        <object-name>sky</object-name>
        <type>material</type>
        <emission> 
            <factor-prop>sim/model/A-6E/controls/VDI/brightness</factor-prop>
            <red>0.8</red>
            <green>0.8</green>
            <blue>0.8</blue>
        </emission>
    </animation>
    <animation> 
        <object-name>ground</object-name>
        <type>material</type>
        <emission> 
            <factor-prop>sim/model/A-6E/controls/VDI/brightness</factor-prop>
            <red>0.8</red>
            <green>0.8</green>
            <blue>0.8</blue>
        </emission>
    </animation>

    <animation> 
        <object-name>alt-curtain</object-name>
        <type>material</type>
        <emission> 
            <factor-prop>sim/model/A-6E/controls/VDI/brightness</factor-prop>
            <red>0.1</red>
            <green>0.15</green>
            <blue>0.1</blue>
        </emission>
    </animation>

    <animation> 
        <object-name>bank-index</object-name>
        <type>material</type>
        <emission> 
            <factor-prop>sim/model/A-6E/controls/VDI/brightness</factor-prop>
            <red>0.85</red>
            <green>0.9</green>
            <blue>0.85</blue>
        </emission>
    </animation>
    <animation> 
        <object-name>impact-marker</object-name>
        <type>material</type>
        <emission> 
            <factor-prop>sim/model/A-6E/controls/VDI/brightness</factor-prop>
            <red>0.85</red>
            <green>0.9</green>
            <blue>0.85</blue>
        </emission>
    </animation>
    <animation> 
        <object-name>drift-marker</object-name>
        <type>material</type>
        <emission> 
            <factor-prop>sim/model/A-6E/controls/VDI/brightness</factor-prop>
            <red>0.85</red>
            <green>0.9</green>
            <blue>0.85</blue>
        </emission>
    </animation>
    <animation> 
        <object-name>target-marker</object-name>
        <type>material</type>
        <emission> 
            <factor-prop>sim/model/A-6E/controls/VDI/brightness</factor-prop>
            <red>0.85</red>
            <green>0.9</green>
            <blue>0.85</blue>
        </emission>
    </animation>
    <animation> 
        <object-name>vsi-marker</object-name>
        <type>material</type>
        <emission> 
            <factor-prop>sim/model/A-6E/controls/VDI/brightness</factor-prop>
            <red>0.85</red>
            <green>0.9</green>
            <blue>0.85</blue>
        </emission>
    </animation>

    <animation> 
        <object-name>ladder</object-name>
        <type>material</type>
        <emission> 
            <factor-prop>sim/model/A-6E/controls/VDI/brightness</factor-prop>
            <red>0.85</red>
            <green>0.9</green>
            <blue>0.85</blue>
        </emission>
    </animation>

	<animation>
		<object-name>video</object-name>
		<type>noshadow</type>
	</animation>
	<animation>
		<object-name>vdi</object-name>
		<type>noshadow</type>
	</animation>



    <animation>
        <type>range</type>
        <min-m>0</min-m>
        <max-m>35</max-m>
    </animation>

</PropertyList>
