<PropertyList>
	<sim>

		<startup>
			<splash-texture>Aircraft/A-6E/A-6E-splash.rgb</splash-texture>
		</startup>

		<flight-model>yasim</flight-model>
		<status>alpha</status>
		<author>Alexis Bory</author>
		<aero>A-6E-yasim</aero>
		<fuel-fraction>0.66</fuel-fraction>
		<description>Grumman A-6E (YASim FDM)</description>
		<virtual-cockpit archive="y">false</virtual-cockpit>
		<chase-distance-m type="double" archive="y">-30.0</chase-distance-m>

		<number-views type="int" archive="y">7</number-views>
		<view n="0">
			<name>Cockpit View</name>
			<type>lookfrom</type>
			<internal archive="y">true</internal>
			<config>
				<x-offset-m archive="y">-0.40</x-offset-m>
				<y-offset-m archive="y">1.35</y-offset-m>
				<z-offset-m archive="y">3.34</z-offset-m>
				<pitch-offset-deg>-10</pitch-offset-deg>
				<default-field-of-view-deg>57</default-field-of-view-deg>
			</config>
		</view>
		<view n="6">
			<name>Drop View</name>
			<type>lookat</type>
			<config>
				<eye-lat-deg-path>sim/view[6]/latitude-deg</eye-lat-deg-path>
				<eye-lon-deg-path>sim/view[6]/longitude-deg</eye-lon-deg-path>
				<eye-alt-ft-path>sim/view[6]/altitude-ft</eye-alt-ft-path>
				<eye-roll-deg-path>sim/view[6]/roll-deg</eye-roll-deg-path>
				<eye-pitch-deg-path>sim/view[6]/pitch-deg</eye-pitch-deg-path>
				<eye-heading-deg-path>sim/view[6]/heading-deg</eye-heading-deg-path>
				<at-model type="bool">true</at-model>
				<at-model-idx type="int">0</at-model-idx>
				<ground-level-nearplane-m type="double">1.0f</ground-level-nearplane-m>
				<default-field-of-view-deg type="double">8.0</default-field-of-view-deg>
				<x-offset-m type="double">0</x-offset-m>
				<y-offset-m type="double">0</y-offset-m>
				<z-offset-m type="double">0</z-offset-m>
				<target-z-offset-m archive="y" type="double">8.0</target-z-offset-m>
			</config>
		</view>
		<view n="1">
			<config>
				<target-z-offset-m archive="y" type="double">8.0</target-z-offset-m>
				<pitch-offset-deg>0</pitch-offset-deg>
			</config>
		</view>
		<view n="2">
			<config>
				<x-offset-m archive="y" type="double">6.0</x-offset-m>
				<z-offset-m archive="y">-19.7</z-offset-m>
				<target-z-offset-m archive="y" type="double">8.0</target-z-offset-m>
			</config>
		</view>
		<view n="3">
			<config>
				<target-z-offset-m archive="y" type="double">8.0</target-z-offset-m>
			</config>
		</view>
		<view n="5">
			<config>
				<target-z-offset-m archive="y" type="double">8.0</target-z-offset-m>
			</config>
		</view>

		<weight n="0">
			<name>Left Outboard</name>
			<tank>4</tank> <!-- FDM tank index on this pylon -->
			<weight-lb>0</weight-lb>
			<selected>none</selected>
			<opt><name>none</name><lbs>0</lbs></opt>
			<opt><name>test</name>   <lbs>500</lbs></opt>
			<opt><name>300 Gallon Fuel Tank</name><lbs>200</lbs><gals>300</gals></opt>
		</weight>
		<weight n="1">
			<name>Left Inboard</name>
			<tank>5</tank> <!-- FDM tank index on this pylon -->
			<weight-lb>0</weight-lb>
			<selected>none</selected>
			<opt><name>none</name>                          <lbs>0</lbs>  </opt>
			<opt><name>test</name>   <lbs>500</lbs></opt>
			<opt><name>300 Gallon Fuel Tank</name><lbs>200</lbs><gals>300</gals></opt>
		</weight>
		<weight n="2">
			<name>Center Fuselage</name>
			<tank>6</tank> <!-- FDM tank index on this pylon -->
			<weight-lb>0</weight-lb>
			<selected>none</selected>
			<opt><name>none</name>                          <lbs>0</lbs>  </opt>
			<opt><name>test</name>   <lbs>500</lbs></opt>
			<opt><name>300 Gallon Fuel Tank</name><lbs>200</lbs><gals>300</gals></opt>
		</weight>
		<weight n="3">
			<name>Right Inboard</name>
			<tank>7</tank> <!-- FDM tank index on this pylon -->
			<weight-lb>0</weight-lb>
			<selected>none</selected>
			<opt><name>none</name>                          <lbs>0</lbs>  </opt>
			<opt><name>test</name>   <lbs>500</lbs></opt>
			<opt><name>300 Gallon Fuel Tank</name><lbs>200</lbs><gals>300</gals></opt>
		</weight>
		<weight n="4">
			<name>Right Outboard</name>
			<tank>8</tank> <!-- FDM tank index on this pylon -->
			<weight-lb>0</weight-lb>
			<selected>none</selected>
			<opt><name>none</name><lbs>0</lbs></opt>
			<opt><name>test</name>   <lbs>500</lbs></opt>
			<opt><name>300 Gallon Fuel Tank</name><lbs>200</lbs><gals>300</gals></opt>
		</weight>


		<sound>
			<audible>false</audible>
			<path></path>
		</sound>

		<model>
			<path>Aircraft/A-6E/Models/A-6E-model.xml</path>
				<A-6E>
					<controls>
				<flight>
					<CG-trim-fwd type="double">0</CG-trim-fwd>
					<CG-trim-aft type="double">5000</CG-trim-aft>
				</flight>
				<!--<gear>
					 <gear-down type="bool">true</gear-down>
				</gear>-->
				</controls>
			</A-6E>
		</model>

		<aoa-indexer>
			<too-slow-deg>9</too-slow-deg>  <!-- target +1.5 deg -->
			<slow-deg>8</slow-deg>          <!-- target +0.5 deg -->
			<fast-deg>7</fast-deg>          <!-- target -0.5 deg -->
			<too-fast-deg>6</too-fast-deg>  <!-- target -1.5 deg -->
		</aoa-indexer>

		<help>
			<title>Fairchild A-6E</title>
			<line>Cruise Speed:      412 kt @ 25000 ft (90% throttle)</line>
			<line>Max speed:         650 kt</line>
			<line>Min Speed:         120 kt (full flaps)</line>
			<line>Approach:          155/170 kt</line>
			<line>Landing:           115/140 kt</line>
			<line>Stall:             145 kt (clean)</line>
				<key>
					<name>C</name>
						<desc>catapult launch command</desc>
					</key>
					<key>
						<name>L</name>
						<desc>carrier launch-bar engage</desc>
					</key>
					<key>
						<name>o/O</name>
						<desc>hook up/down</desc>
					</key>
			<!--<key>
				<name>C</name>
				<desc>open/close canopy</desc>
			</key>-->
		</help>


	</sim>

	<input>
		<keyboard include="../../Input/Keyboard/carrier-bindings.xml"></keyboard>
	</input>

	<controls>
		<flight>
		<elevator-trim type="double">0.017</elevator-trim>
	</flight>
		<gear>
			<brake-parking type="bool">1</brake-parking>
		</gear>
	</controls>

	<nasal>
		<A6E>
			<file>Aircraft/A-6E/Nasal/A-6E.nas</file>
		</A6E>
	</nasal>



</PropertyList>
